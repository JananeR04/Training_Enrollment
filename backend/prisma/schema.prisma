generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  TRAINER
}

enum EnrollmentStatus {
  ENROLLED
  CANCELLED
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  name        String
  role        Role
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Relations
  enrollments Enrollment[] @relation("EmployeeEnrollments")
  trainings   Training[]   @relation("TrainerTrainings")

  @@map("users")
}

model Training {
  id          String       @id @default(uuid())
  title       String
  description String
  seatLimit   Int
  trainerId   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Relations
  trainer     User         @relation("TrainerTrainings", fields: [trainerId], references: [id], onDelete: Cascade)
  enrollments Enrollment[]

  @@map("trainings")
}

model Enrollment {
  id          String           @id @default(uuid())
  employeeId  String
  trainingId  String
  status      EnrollmentStatus @default(ENROLLED)
  enrolledAt  DateTime         @default(now())
  
  // Relations
  employee    User             @relation("EmployeeEnrollments", fields: [employeeId], references: [id], onDelete: Cascade)
  training    Training         @relation(fields: [trainingId], references: [id], onDelete: Cascade)

  @@unique([employeeId, trainingId])
  @@map("enrollments")
}